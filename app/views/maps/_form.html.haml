= form_for @map do |f|
  - if @map.errors.any?
    #error_explanation
      %h2= "#{pluralize(@map.errors.count, "error")} prohibited this map from being saved:"
      %ul
        - @map.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :company_name
    = f.text_field :company_name
  .field
    = f.label :company_address
    = f.text_field :company_address
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :contract_num
    = f.number_field :contract_num
  .field
    = f.label :comment
    = f.text_field :comment
  .field
    = f.label :customer_type
    = f.number_field :customer_type
  .actions
    = f.submit 'Save'
